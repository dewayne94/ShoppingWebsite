@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>_MyShopLayout</title>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark px-5 py-1">
            <a class="navbar-brand" href="#">My Shop</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse"  id="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link"><i class="icon-home"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Admin Panel</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto d-flex align-items-center"> <!--ml atuo -->
                    <li class="nav-item">
                        <a href="/User/Wishlist" class="nav-link">Wishlist <span class="badge badge-pill badge-light">0</span></a>
                    </li>
                    <li class="nav-item">
                        <a href="/User/Cart" class="nav-link">Cart <span class="badge badge-pill badge-light">0</span></a>
                    </li>
                    <li class="nav-item">
                        @{
                            if(MyShop.Security.SessionManager.User!=null)
                            {
                                <a href="#" class="nav-link"><i class="icon-user"></i> @MyShop.Security.SessionManager.User.login </a>
                            }
                            else
                            {
                                <a href="#" class="nav-link"><i class="icon-user"></i> Account</a>
                            } 
                        }
                        
                    </li>
                    <li class="nav-item">
                        @{
                            if (MyShop.Security.SessionManager.User != null)
                            {
                                <a href="/User/Logout" class="nav-link"> Logout <i class="icon-signout"></i></a>
                            }
                            else
                            {
                                <a href="/User/Login" class="nav-link"><i class="icon-signin"></i> Login </a>
                            }
                        }
                        
                    </li>
                </ul>
            </div>
    </div>
    <div class="container-fluid">

        @RenderBody()
    </div>
</body>
</html>
