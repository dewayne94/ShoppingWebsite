@model MyShop.Models.ManageProductsModel
@{
    ViewBag.Title = "ManageProducts";
    Layout = "~/Views/Shared/_MyPublicLayout.cshtml";
}

<h2>ManageProducts</h2>

<div class="col-lg-12">
    <div class="col-lg-4 offset-lg-4">
        <form action="/" method="post">
            <label>
                Select Products By Category
            </label>
            <select class=form-control>
                <option value="0">--Select--</option>
                @foreach (var item in Model.categories)
                {
                    <option value="@item.ID">@item.name</option>
                }
            </select>
            <input type="submit" class="btn btn-warning" value="Submit"/>
        </form>
    </div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th class="d-none d-md-table-cell d-sm-table-cell ">
                Description
            </th>
            <th class="d-none d-md-table-cell d-sm-table-cell">
                Picture
            </th>
            <th class="d-none d-md-table-cell d-sm-table-cell">
                Category
            </th>
            <th>
                Price
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
            @foreach (var item in Model.products)
            {
                <tr>
                    <td>
                        @item.productID
                    </td>
                    <td>
                        @item.name
                    </td>
                    <td class="d-none d-sm-table-cell d-md-table-cell">
                       @item.description
                    </td>
                    <td class="d-none d-sm-table-cell d-md-table-cell">
                        @item.PictureName
                    </td>
                    <td class="d-none d-sm-table-cell d-md-table-cell">
                         @Helper.GetCategoryName((int)@item.categoryID)
                    </td>
                    <td>
                        @item.price
                    </td>
                    <td>
                        <button class="btn btn-primary">Edit <i class="icon-edit"></i></button>
                    </td>
                    <td>
                        <button class="btn btn-danger">Delete <i class="icon-remove"></i></button>
                    </td>
                </tr>
            }
    </table>
</div>


